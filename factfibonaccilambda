#factorial using for loop
def factorial(n):
    f=1
    for i in range(1,n+1):
        f=f*i
    return f
#factoraial using recursion
def fact(n):
    if n == 1:
        return 1
    return n*fact(n-1)

#printing fibonacci series
def fib(n):
    a,b = 0,1
    while  a < n :
        print(a,end = ' ')
        a,b = b, a+b
    print()
fib(n)

n = int(input("Enter value to find its factorial :"))
result = fact(n)
print("factorial of",n,"is",result)
#anonymous or lambda functions
square = lambda a:a*a
result = square(4)
print(result)
name = input("What is your name")
print()

